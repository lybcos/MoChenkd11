        <!--app:textSizeSearch="5dp"-->
        <!--app:textColorSearch="#3F51B5"-->
        <!--app:textHintSearch="输入查询关键字"-->
        <!--app:searchBlockHeight="150"-->
        <!--app:searchBlockColor="#ffffff"-->
        <!--/>-->

    <EditText
        android:id="@+id/edt_com"
        android:layout_margin="20dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="请输入运单号"
        android:drawableRight="@drawable/ic_sao"
        android:background="@drawable/rect"
       />
    
    <RelativeLayout
    android:id="@+id/chooseCompany"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize">
    <TextView
        android:id="@+id/kdCompany"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:text="快递公司"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@id/kdCompany"
        android:textColor="@color/kdcolor"
        android:textSize="16sp"
        android:padding="15dp"
        android:textStyle="bold"
        android:text="自动选择"/>
    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_margin="10dp"
        android:layout_alignParentRight="true"
        android:src="@drawable/ic_jiantouy"/>
</RelativeLayout>

    <Button
        android:id="@+id/btn_check"
        android:layout_width="match_parent"
        android:layout_height="40dp"
       android:background="@drawable/btn_rect"

        android:drawablePadding="15dp"
        android:text="查询"
        android:textColor="#fff"
        android:textStyle="bold"
        android:layout_margin="25dp"/>
</LinearLayout>
